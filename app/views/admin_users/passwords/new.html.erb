<div class="auth-page d-flex justify-content-center align-items-center min-vh-100">
  <div class="auth-page-container">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "admin_users/shared/error_messages", resource: resource %>
      <p class="text-dark text-center fw-bold fs-3">Forgot your password?</p>
      <div class="mt-3">
        <%= f.label :email,class: "form-label" %>
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "Request a Password Reset",  class:"btn btn-orange w-100" %>
      </div>

      <div class="mt-4 d-flex justify-content-center">
        <%= render "admin_users/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
